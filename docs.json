{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "DNSTail Documentation",
  "colors": {
    "primary": "#dc2626",
    "light": "#dc2626",
    "dark": "#dc2626"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "pages": [
      "index",
      "docs/authentication",
      "docs/rate-limit",
      "docs/error-codes",
      "docs/openapi",
      {
        "group": "API Reference",
        "openapi": "./openapi.json",
        "pages": [
          {
            "group": "Account",
            "pages": [
              "GET /agents",
              "GET /organization",
              "PATCH /organization"
            ]
          },
          {
            "group": "Monitors",
            "pages": [
              "GET /monitors",
              "POST /monitors",
              "POST /monitors/bulk",
              "GET /monitors/{uuid}",
              "PATCH /monitors/{uuid}",
              "DELETE /monitors/{uuid}",
              {
                "group": "Enable/Disable",
                "pages": [
                  "POST /monitors/{uuid}/enable",
                  "POST /monitors/{uuid}/disable"
                ]
              },
              {
                "group": "Events",
                "pages": [
                  "GET /monitors/{monitor_uuid}/events",
                  "GET /monitors/{monitor_uuid}/events/{uuid}"
                ]
              }
            ]
          },
          {
            "group": "Groups",
            "pages": [
              "GET /groups",
              "POST /groups",
              "GET /groups/{slug}",
              "PATCH /groups/{slug}",
              "DELETE /groups/{slug}",
              "GET /groups/{slug}/monitors",
              "PATCH /groups/{slug}/monitors"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "GET /webhooks",
              "POST /webhooks",
              "GET /webhooks/{uuid}",
              "PATCH /webhooks/{uuid}",
              "DELETE /webhooks/{uuid}",
              {
                "group": "Enable/Disable",
                "pages": [
                  "POST /webhooks/{uuid}/enable",
                  "POST /webhooks/{uuid}/disable"
                ]
              },
              {
                "group": "Test",
                "pages": [
                  "POST /webhooks/{uuid}/test"
                ]
              },
              {
                "group": "Requests",
                "pages": [
                  "GET /webhooks/{uuid}/requests"
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@dnstail.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.dnstail.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/dnstail",
      "bluesky": "https://bsky.app/@dnstail.com"
    }
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "javascript", "python", "ruby", "go", "php", "java"],
      "defaults": "required"
    }
  }
}
